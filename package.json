  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=local tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=dev node dist/index.js",
    "build": "tsc",
    "ba:generate": "npx @better-auth/cli generate --output src/database/auth-schema.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "studio:local": "cross-env NODE_ENV=local drizzle-kit studio",
    "studio:dev": "cross-env NODE_ENV=dev drizzle-kit studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "arktype": "^2.1.22",
    "better-auth": "^1.3.24",
    "dotenv": "^17.2.3",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.9",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
